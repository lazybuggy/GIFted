<div class="weather-info">
	<div id="degrees">
		<h2>Degrees in Celsius: <%= @weatherCelsius %></h2>
	</div>
	<div id="forecast">
		<h2> 	Main weather forecast in  <%= @city %> :  </h2>
		 <h1>    <%= @main %></h1>
		 <h3>Weather description: <%= @description %></h3>
	</div>	
</div>

<div class="gifs">
	<% @results.each do |gif|%> 
	<img src="<%= gif %>"  height="400" width="400">
	<% end %>
</div>
